<%# いいね機能の部分テンプレート %>


<% if post.favorited_by?(current_user) %>
    <%= link_to post_favorites_path(post), method: :delete, remote: true do %>
        <i class="fa-solid fa-heart" style="color: #F94646;"></i>
        <span><%= post.favorites.count %>いいね</span>
    <% end %>
<% else %>
    <%= link_to post_favorites_path(post), method: :post, remote: true do %>
        <i class="fa-regular fa-heart" style="color: #F94646;"></i>
        <span><%= post.favorites.count %>いいね</span>
    <% end %>
<% end %>