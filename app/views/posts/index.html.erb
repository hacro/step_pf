<h1>みんなの投稿</h1>

<% @posts.each do |post| %>
    <%= link_to post_path(post) do %>
        <div class="user-name">
        <%# ここにユーザーのプロフ画像 %>
            <%= image_tag post.user.get_profile_image(100, 100) %>
            <%= post.user.name %>
        </div>
        <div class="post-item">
            <% if post.image.present? %>
                <%= image_tag post.image, :size => '542x230' %>
            <% end %>
            <%= post.spot_type.type_name %>
            <%= post.caption %>
            <%= post.location %>
        </div>
    <% end %>
<% end %>
<%= paginate @posts %>